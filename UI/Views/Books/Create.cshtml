@model UI.Models.DTOs.BookDTO
@{
    ViewData["Title"] = "Створити книгу";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Введіть назву книги" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" placeholder="Введіть ім'я автора" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control">
                    <option value="">Оберіть жанр</option>
                    <option value="Fiction">Художня література</option>
                    <option value="Science">Наукова</option>
                    <option value="History">Історична</option>
                    <option value="Biography">Біографія</option>
                    <option value="Fantasy">Фентезі</option>
                    <option value="Mystery">Детектив</option>
                    <option value="Romance">Романтика</option>
                    <option value="Thriller">Трилер</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="">Оберіть тип</option>
                    <option value="Physical">Фізична</option>
                    <option value="Digital">Цифрова</option>
                    <option value="Audio">Аудіо</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Year" class="text-danger"></span>
                <small class="form-text text-muted">Оберіть будь-яку дату в рік видання (важливий тільки рік)</small>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="IsAvailable" class="form-check-input" checked />
                    <label asp-for="IsAvailable" class="form-check-label"></label>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Введіть опис книги"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <small class="form-text text-muted">Обов'язкове поле</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Створити книгу
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Скасувати
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Додатковий JavaScript для кращої валідації
        $(document).ready(function() {
            $('form').on('submit', function(e) {
                var isValid = true;

                // Перевірка назви
                if ($('#Title').val().trim() === '') {
                    isValid = false;
                    alert('Будь ласка, введіть назву книги');
                    $('#Title').focus();
                    return false;
                }

                // Перевірка автора
                if ($('#Author').val().trim() === '') {
                    isValid = false;
                    alert('Будь ласка, введіть автора книги');
                    $('#Author').focus();
                    return false;
                }

                // Перевірка жанру
                if ($('#Genre').val() === '') {
                    isValid = false;
                    alert('Будь ласка, оберіть жанр книги');
                    $('#Genre').focus();
                    return false;
                }

                // Перевірка типу
                if ($('#Type').val() === '') {
                    isValid = false;
                    alert('Будь ласка, оберіть тип книги');
                    $('#Type').focus();
                    return false;
                }

                if (!isValid) {
                    e.preventDefault();
                }
            });
        });
    </script>
}