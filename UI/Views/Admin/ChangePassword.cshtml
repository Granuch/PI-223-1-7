@* @model UI.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Зміна паролю";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-key"></i> Зміна паролю користувача
                </h2>
                <div>
                    <a href="@Url.Action("UserDetails", "Admin", new { id = Model.UserId })" class="btn btn-info">
                        <i class="fas fa-user"></i> Деталі користувача
                    </a>
                    <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Назад до списку
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-key"></i> Новий пароль для користувача
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Інформація про користувача -->
                    <div class="alert alert-light border-info">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user-circle fa-2x text-info me-3"></i>
                            <div>
                                <h6 class="mb-1">@Model.UserEmail</h6>
                                <small class="text-muted">ID: @(Model.UserId.Length > 8 ? Model.UserId.Substring(0, 8) + "..." : Model.UserId)</small>
                            </div>
                        </div>
                    </div>

                    <form asp-action="ChangePassword" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="UserEmail" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-lock"></i> @Html.DisplayNameFor(m => m.NewPassword)
                            </label>
                            <div class="input-group">
                                <input asp-for="NewPassword" class="form-control" placeholder="Введіть новий пароль" id="newPassword" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fas fa-eye" id="eyeIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle text-info"></i>
                                Мінімум 6 символів, має містити великі та малі літери, цифри
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmNewPassword" class="form-label">
                                <i class="fas fa-lock"></i> @Html.DisplayNameFor(m => m.ConfirmNewPassword)
                            </label>
                            <div class="input-group">
                                <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Повторіть новий пароль" id="confirmPassword" />
                                <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                    <i class="fas fa-eye" id="eyeIconConfirm"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <!-- Генератор паролю -->
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-random"></i> Генератор паролю
                                </h6>
                                <div class="row">
                                    <div class="col-md-8">
                                        <input type="text" id="generatedPassword" class="form-control" placeholder="Згенерований пароль" readonly />
                                    </div>
                                    <div class="col-md-4">
                                        <button type="button" class="btn btn-outline-primary w-100" id="generatePassword">
                                            <i class="fas fa-dice"></i> Згенерувати
                                        </button>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <button type="button" class="btn btn-sm btn-outline-success" id="useGenerated">
                                        <i class="fas fa-check"></i> Використати
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-info" id="copyGenerated">
                                        <i class="fas fa-copy"></i> Копіювати
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <h6 class="alert-heading">
                                <i class="fas fa-exclamation-triangle"></i> Увага!
                            </h6>
                            <p class="mb-0">
                                Після зміни паролю користувач буде відключений від системи та повинен буде увійти з новим паролем.
                                Обов'язково повідомте користувача про новий пароль.
                            </p>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("UserDetails", "Admin", new { id = Model.UserId })" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Скасувати
                            </a>
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-key"></i> Змінити пароль
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Поради по безпеці -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-shield-alt"></i> Поради по безпеці паролю
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Використовуйте мінімум 8 символів</li>
                        <li><i class="fas fa-check text-success"></i> Комбінуйте великі та малі літери</li>
                        <li><i class="fas fa-check text-success"></i> Додавайте цифри та спеціальні символи</li>
                        <li><i class="fas fa-check text-success"></i> Уникайте словникових слів</li>
                        <li><i class="fas fa-check text-success"></i> Не використовуйте особисту інформацію</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        $(document).ready(function() {
            // Показати/сховати пароль
            $('#togglePassword').click(function() {
                const passwordField = $('#newPassword');
                const eyeIcon = $('#eyeIcon');
                
                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    eyeIcon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    eyeIcon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            $('#toggleConfirmPassword').click(function() {
                const passwordField = $('#confirmPassword');
                const eyeIcon = $('#eyeIconConfirm');
                
                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    eyeIcon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    eyeIcon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Генератор паролю
            function generatePassword(length = 12) {
                const charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*";
                let password = "";
                for (let i = 0; i < length; i++) {
                    password += charset.charAt(Math.floor(Math.random() * charset.length));
                }
                return password;
            }

            $('#generatePassword').click(function() {
                const generatedPassword = generatePassword();
                $('#generatedPassword').val(generatedPassword);
            });

            $('#useGenerated').click(function() {
                const generatedPassword = $('#generatedPassword').val();
                if (generatedPassword) {
                    $('#newPassword').val(generatedPassword);
                    $('#confirmPassword').val(generatedPassword);
                }
            });

            $('#copyGenerated').click(function() {
                const generatedPassword = $('#generatedPassword').val();
                const button = $(this);
                
                if (generatedPassword) {
                    navigator.clipboard.writeText(generatedPassword).then(function() {
                        button.html('<i class="fas fa-check"></i> Скопійовано').removeClass('btn-outline-info').addClass('btn-success');
                        setTimeout(() => {
                            button.html('<i class="fas fa-copy"></i> Копіювати').removeClass('btn-success').addClass('btn-outline-info');
                        }, 2000);
                    });
                }
            });

            // Валідація паролю в реальному часі
            $('#newPassword, #confirmPassword').on('input', function() {
                const password = $('#newPassword').val();
                const confirmPassword = $('#confirmPassword').val();
                
                // Перевірка збігу паролів
                if (password && confirmPassword && password !== confirmPassword) {
                    $('#confirmPassword').addClass('is-invalid');
                } else {
                    $('#confirmPassword').removeClass('is-invalid');
                }
            });
        });
    </script>
} *@