@model UI.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Зміна паролю";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-key"></i> Зміна паролю користувача
                </h2>
                <div>
                    <a href="@Url.Action("UserDetails", "Admin", new { id = Model.UserId })" class="btn btn-info">
                        <i class="fas fa-user"></i> Деталі користувача
                    </a>
                    <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Назад до списку
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-key"></i> Новий пароль для користувача
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Інформація про користувача -->
                    <div class="alert alert-light border-info">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user-circle fa-3x text-info me-3"></i>
                            <div>
                                <h5 class="mb-1 text-info">@Model.UserEmail</h5>
                                <small class="text-muted">
                                    <i class="fas fa-id-card"></i> 
                                    ID: @(Model.UserId.Length > 8 ? Model.UserId.Substring(0, 8) + "..." : Model.UserId)
                                </small>
                            </div>
                        </div>
                    </div>

                    <form asp-action="ChangePassword" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="UserEmail" />
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <h6 class="alert-heading">
                                    <i class="fas fa-exclamation-circle"></i> Помилки валідації:
                                </h6>
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NewPassword" class="form-label fw-bold">
                                        <i class="fas fa-lock text-info"></i> @Html.DisplayNameFor(m => m.NewPassword)
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="NewPassword" class="form-control" placeholder="Введіть новий пароль" id="newPassword" />
                                        <button class="btn btn-outline-secondary" type="button" id="togglePassword" title="Показати/сховати пароль">
                                            <i class="fas fa-eye" id="eyeIcon"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle text-info"></i>
                                        Мінімум 6 символів, має містити великі та малі літери, цифри
                                    </div>
                                    <!-- Індикатор сили паролю -->
                                    <div class="mt-2">
                                        <div class="password-strength">
                                            <small class="text-muted">Сила паролю:</small>
                                            <div class="progress" style="height: 5px;">
                                                <div class="progress-bar" id="passwordStrength" role="progressbar" style="width: 0%"></div>
                                            </div>
                                            <small id="strengthText" class="text-muted"></small>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="ConfirmNewPassword" class="form-label fw-bold">
                                        <i class="fas fa-lock text-info"></i> @Html.DisplayNameFor(m => m.ConfirmNewPassword)
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Повторіть новий пароль" id="confirmPassword" />
                                        <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword" title="Показати/сховати пароль">
                                            <i class="fas fa-eye" id="eyeIconConfirm"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                    <div id="passwordMatch" class="form-text"></div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <!-- Генератор паролю -->
                                <div class="card bg-light border-primary">
                                    <div class="card-header bg-primary text-white py-2">
                                        <h6 class="mb-0">
                                            <i class="fas fa-random"></i> Генератор паролю
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label">Довжина паролю:</label>
                                            <input type="range" class="form-range" id="passwordLength" min="6" max="20" value="12">
                                            <div class="d-flex justify-content-between">
                                                <small>6</small>
                                                <span id="lengthValue" class="badge bg-info">12</span>
                                                <small>20</small>
                                            </div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" id="includeSymbols" checked>
                                                <label class="form-check-label" for="includeSymbols">
                                                    <small>Символи (!@@#$%)</small>
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" id="includeNumbers" checked>
                                                <label class="form-check-label" for="includeNumbers">
                                                    <small>Цифри</small>
                                                </label>
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <input type="text" id="generatedPassword" class="form-control form-control-sm" placeholder="Згенерований пароль" readonly />
                                        </div>
                                        
                                        <div class="d-grid gap-2">
                                            <button type="button" class="btn btn-primary btn-sm" id="generatePassword">
                                                <i class="fas fa-dice"></i> Згенерувати
                                            </button>
                                            <div class="row">
                                                <div class="col-6">
                                                    <button type="button" class="btn btn-success btn-sm w-100" id="useGenerated">
                                                        <i class="fas fa-check"></i> Використати
                                                    </button>
                                                </div>
                                                <div class="col-6">
                                                    <button type="button" class="btn btn-outline-info btn-sm w-100" id="copyGenerated">
                                                        <i class="fas fa-copy"></i> Копіювати
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Попередження -->
                        <div class="alert alert-warning">
                            <h6 class="alert-heading">
                                <i class="fas fa-exclamation-triangle"></i> Важливо!
                            </h6>
                            <ul class="mb-0">
                                <li>Після зміни паролю користувач буде відключений від системи</li>
                                <li>Користувач повинен буде увійти з новим паролем</li>
                                <li><strong>Обов'язково повідомте користувача про новий пароль</strong></li>
                                <li>Рекомендуємо користувачу змінити пароль при першому вході</li>
                            </ul>
                        </div>

                        <!-- Кнопки -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("UserDetails", "Admin", new { id = Model.UserId })" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Скасувати
                            </a>
                            <button type="submit" class="btn btn-info" id="submitBtn">
                                <i class="fas fa-key"></i> Змінити пароль
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Поради по безпеці -->
            <div class="card mt-4">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-shield-alt"></i> Рекомендації по безпеці паролю
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-success">✓ Рекомендується:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success"></i> Мінімум 8-12 символів</li>
                                <li><i class="fas fa-check text-success"></i> Великі та малі літери</li>
                                <li><i class="fas fa-check text-success"></i> Цифри та спеціальні символи</li>
                                <li><i class="fas fa-check text-success"></i> Унікальний для кожного сервісу</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-danger">✗ Уникайте:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-times text-danger"></i> Словникові слова</li>
                                <li><i class="fas fa-times text-danger"></i> Особисту інформацію</li>
                                <li><i class="fas fa-times text-danger"></i> Послідовності (123, abc)</li>
                                <li><i class="fas fa-times text-danger"></i> Повторювані символи</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/change-password.js"></script>
}