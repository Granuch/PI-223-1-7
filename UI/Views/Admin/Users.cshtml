@model IEnumerable<UI.Models.DTOs.UserDTO>
@{
    ViewData["Title"] = "Управління користувачами";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-users"></i> Управління користувачами
                </h2>
                <div>
                    <a href="@Url.Action("CreateUser", "Admin")" class="btn btn-success">
                        <i class="fas fa-user-plus"></i> Створити користувача
                    </a>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Назад до панелі
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-list"></i> Список користувачів (@Model.Count())
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Користувач</th>
                                        <th>Email</th>
                                        <th>Телефон</th>
                                        <th>Ролі</th>
                                        <th>Дата реєстрації</th>
                                        <th style="width: 200px;">Дії</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm me-2">
                                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                            @(user.FirstName?.Substring(0, 1)?.ToUpper() ?? "U")
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <strong>@user.FirstName @user.LastName</strong>
                                                        <br>
                                                        <small class="text-muted">ID: @user.Id.Substring(0, 8)...</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="mailto:@user.Email" class="text-primary">
                                                    @user.Email
                                                </a>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                                {
                                                    <a href="tel:@user.PhoneNumber">@user.PhoneNumber</a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Не вказано</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.Roles != null && user.Roles.Any())
                                                {
                                                    @foreach (var role in user.Roles)
                                                    {
                                                        var badgeClass = role switch
                                                        {
                                                            "Administrator" => "bg-danger",
                                                            "Manager" => "bg-warning text-dark",
                                                            "RegisteredUser" => "bg-info",
                                                            _ => "bg-secondary"
                                                        };
                                                        <span class="badge @badgeClass me-1">@role</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Без ролей</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="text-muted">
                                                    @user.CreatedAt.ToString("dd.MM.yyyy")
                                                </span>
                                                <br>
                                                <small class="text-muted">
                                                    @user.CreatedAt.ToString("HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("UserDetails", "Admin", new { id = user.Id })" 
                                                       class="btn btn-sm btn-outline-primary" title="Деталі">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" 
                                                       class="btn btn-sm btn-outline-warning" title="Редагувати">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("ManageRoles", "Admin", new { id = user.Id })" 
                                                       class="btn btn-sm btn-outline-info" title="Ролі">
                                                        <i class="fas fa-user-tag"></i>
                                                    </a>
                                                    <a href="@Url.Action("ChangePassword", "Admin", new { id = user.Id })" 
                                                       class="btn btn-sm btn-outline-secondary" title="Змінити пароль">
                                                        <i class="fas fa-key"></i>
                                                    </a>
                                                    <a href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" 
                                                       class="btn btn-sm btn-outline-danger" title="Видалити">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Статистика ролей -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-chart-pie"></i> Розподіл ролей
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            @{
                                var roleStats = Model.SelectMany(u => u.Roles ?? new List<string>())
                                                   .GroupBy(r => r)
                                                   .ToDictionary(g => g.Key, g => g.Count());
                            }
                            
                            @if (roleStats.ContainsKey("Administrator"))
                            {
                                <div class="col-md-3">
                                    <h4 class="text-danger">@roleStats["Administrator"]</h4>
                                    <p class="mb-0">Адміністраторів</p>
                                </div>
                            }
                            
                            @if (roleStats.ContainsKey("Manager"))
                            {
                                <div class="col-md-3">
                                    <h4 class="text-warning">@roleStats["Manager"]</h4>
                                    <p class="mb-0">Менеджерів</p>
                                </div>
                            }
                            
                            @if (roleStats.ContainsKey("RegisteredUser"))
                            {
                                <div class="col-md-3">
                                    <h4 class="text-info">@roleStats["RegisteredUser"]</h4>
                                    <p class="mb-0">Користувачів</p>
                                </div>
                            }
                            
                            <div class="col-md-3">
                                <h4 class="text-success">@Model.Count()</h4>
                                <p class="mb-0">Загалом</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">Користувачі не знайдені</h4>
                        <p class="text-muted mb-4">В системі ще немає жодного користувача.</p>
                        <a href="@Url.Action("CreateUser", "Admin")" class="btn btn-primary">
                            <i class="fas fa-user-plus"></i> Створити першого користувача
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>