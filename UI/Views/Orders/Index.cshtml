@model IEnumerable<UI.Models.DTOs.OrderDTO>
@{
    ViewData["Title"] = "Всі замовлення";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    @if (ViewBag.IsManager == true || ViewBag.IsAdministrator == true)
    {
        <a asp-action="Create" class="btn btn-success">Створити замовлення</a>
    }
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Користувач</th>
                <th>Книга</th>
                <th>Автор</th>
                <th>Рік видання</th>
                <th>Дата замовлення</th>
                <th>Статус</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var order in Model)
                {
                    <tr>
                        <td><strong>@order.Id</strong></td>
                        <td>
                            @if (!string.IsNullOrEmpty(order.UserEmail))
                            {
                                <span class="text-primary">@order.UserEmail</span>
                            }
                            else
                            {
                                <span class="text-muted">ID: @order.UserId.Substring(0, 8)...</span>
                            }
                        </td>
                        <td>
                            @if (order.Book != null)
                            {
                                <strong>@order.Book.Title</strong>
                            }
                            else
                            {
                                <span class="text-muted">Книга ID: @order.BookId</span>
                            }
                        </td>
                        <td>
                            @if (order.Book != null)
                            {
                                <span class="text-secondary">@order.Book.Author</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (order.Book != null)
                            {
                                <span class="badge bg-light text-dark">@order.Book.Year.Year</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <span class="text-info">@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</span>
                        </td>
                        <td>
                            <span class="badge @order.StatusBadgeClass">@order.StatusUkrainian</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm" title="Переглянути деталі">
                                    <i class="fas fa-eye"></i> Деталі
                                </a>
                                @if (ViewBag.IsManager == true || ViewBag.IsAdministrator == true)
                                {
                                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-outline-warning btn-sm" title="Редагувати">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                }
                                @if (ViewBag.IsAdministrator == true)
                                {
                                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-outline-danger btn-sm" title="Видалити">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">
                        <div class="alert alert-info">
                            <h5 class="alert-heading">Замовлення не знайдені</h5>
                            <p class="mb-0">Наразі немає жодного замовлення в системі.</p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model != null && Model.Any())
{
    <div class="mt-3">
        <div class="row">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@Model.Count()</h5>
                        <p class="card-text">Всього замовлень</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-success">@Model.Count(o => o.Type == 1)</h5>
                        <p class="card-text">Активних</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">@Model.Count(o => o.Type == 2)</h5>
                        <p class="card-text">Повернено</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-danger">@Model.Count(o => o.Type == 3)</h5>
                        <p class="card-text">Прострочено</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}