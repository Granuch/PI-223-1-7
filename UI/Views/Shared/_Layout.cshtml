<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Бібліотека</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Бібліотека</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">Книги</a>
                        </li>
                        @if (ViewBag.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="MyOrders">Мої замовлення</a>
                            </li>
                            @if (ViewBag.IsManager == true || ViewBag.IsAdministrator == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">Всі замовлення</a>
                                </li>
                            }
                            @if (ViewBag.IsManager == true || ViewBag.IsAdministrator == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Create">Додати книгу</a>
                                </li>
                            }
                            @if (ViewBag.IsAdministrator == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">
                                        <i class="fas fa-cogs"></i> Панель адміністрування
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (ViewBag.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    Привіт, @ViewBag.User?.FirstName!
                                    @if (ViewBag.IsAdministrator == true)
                                    {
                                        <span class="badge bg-danger ms-1">Адмін</span>
                                    }
                                    else if (ViewBag.IsManager == true)
                                    {
                                        <span class="badge bg-warning ms-1">Менеджер</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info ms-1">Користувач</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Вийти</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Увійти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Реєстрація</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Бібліотека
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function keepSessionAlive() {
            fetch('/Account/KeepAlive', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                credentials: 'include'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    console.log('Session refreshed at:', new Date().toLocaleTimeString());
                } else {
                    console.log('Session refresh failed:', data.message);
                    if (data.message === "Session expired") {
                        window.location.href = '/Account/Login';
                    }
                }
            })
            .catch(error => {
                console.log('Keep alive error:', error);
            });
        }

        @if (ViewBag.IsAuthenticated == true)
        {
                <text>
                // Оновлюємо сесію кожні 10 сек
                setInterval(keepSessionAlive, 10 * 1000);

                // Перший раз через 30 сек після завантаження
                setTimeout(keepSessionAlive, 30000);
                </text>
        }
    </script>
</body>
</html>